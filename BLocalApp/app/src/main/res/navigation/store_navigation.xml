<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_navigation"
    app:startDestination="@+id/navigation_list">

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.bteam.blocal.ui.item_list.ItemListFragment"
        android:label="@string/title_list"
        tools:layout="@layout/fragment_item_list" >
        <action
            android:id="@+id/showItemDetail"
            app:destination="@id/itemDetailFragment" />
        <action
            android:id="@+id/createItem"
            app:destination="@id/editItemFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.bteam.blocal.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.bteam.blocal.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.bteam.blocal.ui.item_detail.ItemDetailFragment"
        android:label="fragment_item_detail"
        tools:layout="@layout/fragment_item_detail" >
        <action
            android:id="@+id/editItem"
            app:destination="@id/editItemFragment" />
        <argument
            android:name="itemUid"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/editItemFragment"
        android:name="com.bteam.blocal.ui.edit_item.EditItemFragment"
        android:label="fragment_edit_item"
        tools:layout="@layout/fragment_edit_item">
        <argument
            android:name="itemUid"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>